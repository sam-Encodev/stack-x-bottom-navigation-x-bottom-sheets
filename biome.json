{
 "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
 "organizeImports": {
  "enabled": false
 },
 "linter": {
  "enabled": true,
  "rules": {
   "recommended": true
  }
 },
 "formatter": {
  "enabled": true,
  "formatWithErrors": false,
  "ignore": [],
  "attributePosition": "auto",
  "indentStyle": "space",
  "indentWidth": 1,
  "lineWidth": 80,
  "lineEnding": "lf"
 },
 "javascript": {
  "formatter": {
   "arrowParentheses": "always",
   "bracketSameLine": false,
   "bracketSpacing": true,
   "jsxQuoteStyle": "double",
   "quoteProperties": "asNeeded",
   "semicolons": "always",
   "trailingCommas": "all"
  }
 },
 "json": {
  "formatter": {
   "trailingCommas": "none"
  }
 },
 "vcs": {
  "enabled": true,
  "clientKind": "git"
 }
}
